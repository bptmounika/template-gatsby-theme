{
  "name": "root",
  "description": "Starter template for developing and publishing gatsby themes.",
  "private": true,
  "author": "Stephen Merth <stephen.merth@gmail.com> (https://smerth.github.io/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/smerth/gatsby-theme-template"
  },
  "homepage": "https://github.com/smerth/gatsby-theme-template#readme",
  "bugs": "https://github.com/smerth/gatsby-theme-template/issues",
  "license": "MIT",
  "scripts": {
    "setup": "npm install && yarn build && yarn serve",
    "develop": "yarn workspace demo start",
    "build": "yarn workspace demo build",
    "serve": "yarn workspace demo serve",
    "format": "yarn workspace demo format",
    "clean": "yarn workspace demo clean",
    "scrub": "yarn clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "readme": "readme",
    "pub": "lerna publish",
    "commit": "git add . && npx git-cz",
    "push": "git push origin -u main"
  },
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "ghooks": "^2.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.0.0",
    "readme-md-generator": "^1.0.0",
    "semantic-release": "^19.0.0"
  },
  "publishConfig": {
    "@smerth:registry": "https://npm.pkg.github.com/smerth"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "config": {
    "ghooks": {},
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": ""
    }
  }
}
